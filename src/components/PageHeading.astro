---
interface Props {
    title : string
}

const { title } = Astro.props
---


<div class="relative py-20 text-4xl font-semibold bg-black">

    <img src="/img/page-header.jpg" class="absolute inset-0 object-cover w-full max-h-full opacity-20" />

    <h1 class="relative w-fit mx-auto text-primary-50">
        {title}
    </h1>

</div>


<style>

h1::before {
    content: '';
    position: absolute;
    left : 0;
    bottom : -10px;
    width : 25%;
    height : 5px;
    background-color: hsl( var(--color-primary-500) );
}
</style>