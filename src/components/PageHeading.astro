---
interface Props {
    title : string
}

const { title } = Astro.props
---


<div class="relative py-20 text-4xl font-semibold text-primary-400 bg-black bg-opacity-80">
    <h1 class="relative w-fit mx-auto">
        {title}
    </h1>
</div>


<style>

div::before {
    content: '';
    position: absolute;
    inset : 0;
    z-index: -2;
    background-image: url(img/page-header.jpg);
    background-position: center;
}

h1::before {
    content: '';
    position: absolute;
    left : 0;
    bottom : -10px;
    width : 40%;
    height : 5px;
    background-color: hsl( var(--color-primary-500) );
}
</style>