---
import BaseLayout from "../layouts/BaseLayout.astro";
import * as content from  "../content/pages/services.md"
import { Content } from  "../content/pages/services.md"
import PageHeading from "../components/PageHeading.astro";
import ContentWrapper from "../components/ContentWrapper.astro";
import Markdown from "../components/Markdown.astro";
---

<BaseLayout activePage="services">

	<PageHeading title={content.frontmatter.title} />

	<ContentWrapper>
		<Markdown class="max-w-xl mx-auto">
			<Content />
		</Markdown>
	</ContentWrapper>

</BaseLayout>